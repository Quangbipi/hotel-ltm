                    <% if(rooms.length) { %>
                    <% for(i=0;i<rooms.length;i++){  %>


                    <div class="col-xl-4 col-lg-4 col-md-12 col-12">
                        
                        <form action="/boooking" method="POST">
                            <input type="text" name="name" value="<%=rooms[i].name%>" hidden>
                            <input type="text" name="type" value="<%=rooms[i].type%>" hidden>
                            <input type="text" name="cost" value="<%=rooms[i].cost%>" hidden>

                            <div class="single-room mb-50">
                                <div class="room-img p-2">        
                                        <a href="#"><img src="<%=rooms[i].img%>" alt="" height="200px"></a>
                                </div>
                                <div class="room-caption text-center">

                                    <h3><a href="#"><%=rooms[i].type%></a></h3>
                                    <h5><%=rooms[i].dec%></h5>
                                    <div class="per-night">
                                        <span>&#8369; <%=rooms[i].cost%> <span>/ per night</span></span>
                                    </div>
